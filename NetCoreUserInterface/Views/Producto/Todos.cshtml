@model Tuple<List<NetCoreUserInterface.Models.Producto>, int>

<div class="row">
    @foreach (var item in Model.Item1)
    {
        <div class="col-4">
            <div class="card bg-dark px-2 py-2 my-2">
                <img src="@item.image" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="~/Producto/Details/@item.IdProduct" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
    }
</div>
<hr />
<div class="row">
<!--Paginación-->
    <div class="container text-center">
            <div class="row text-center">
                @for (int i = 1; i <= Model.Item2; i++)
                {
                    <div class="col-sm-1 text-center">
                        @Html.ActionLink("Página " + @i, "Todos", new { id = i })
                        <a class="btn btn-primary">@i</a>
                    </div>
                }
            </div>
    </div>
</div>